@model List<Student>


@{
    int count = 0;
}

<div class="text-center container">
    <table>
        <thead>
            <tr>
                <th>No</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <td>@(++count)</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Age</td>
            </tr>
            }
        </tbody>
    </table>
</div>


